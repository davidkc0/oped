<div class='col-sm-6 col-lg-8 offset-lg-2'>
  <div class="card">
    <div class="card-topper" style="background-image: url(<%= post.banner_image_url%>);"></div>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <p class="published-by"><%= post.author.name %></p>
      <p class="published-date"><%= post.published_date%></p>
      <p class="card-text"><%= truncate_html(post.body.html_safe, length: 250)%></p>
      <%= link_to 'read more', post, class: 'btn btn-read' %>
    </div>
  </div>
</div>