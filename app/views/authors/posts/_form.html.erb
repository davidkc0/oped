<%= form_for(post, url: url) do |f| %>
<%= tinymce_assets %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-block">
        <% if @post.new_record? %>
          <h4 class="card-title"> New post</h4>
        <% else %>
          <h4 class="card-title">
            <b>Editing:</b>
            <span class="thin_text"><%= @post.title %></span>
          </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
              <div class="field">
                <p class="field-label"> Title: </p>
                <%= f.text_field :title, class: "form-control"%>
              </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <p class="field-label">Banner image url:</p>
              <%= f.text_field :banner_image_url, class: "form-control"%>
            </div>
          </li>
        </ul>
          
      </div>
      <div class="actions">
              <%= f.submit class: "btn btn-outline-success btn-block"%>
      </div> 
      <% if @post.persisted? %> 
      <%= link_to 'Show', @post %> |
      <% end %>
      <%= link_to 'Back', authors_posts_path %>
    </div>

    
    <div class="col-md-8">
        <div class="field">
          <%= f.text_area :body, class: "tinymce", :rows => 9, :cols => 50 %>
        </div>
    </div>
  </div>
  <!-- <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div> -->
<% end %>
<%= tinymce %>
